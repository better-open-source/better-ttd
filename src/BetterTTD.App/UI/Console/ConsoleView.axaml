<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DataContext="{d:DesignInstance console:ConsolePresenter, IsDesignTimeCreatable=True}"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:console="clr-namespace:BetterTTD.App.UI.Console"
    x:Class="BetterTTD.App.UI.Console.ConsoleView"
    mc:Ignorable="d">
    <DockPanel>
        <DataGrid Items="{Binding ConsoleMessages}" IsReadOnly="True" CanUserSortColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Origin" Binding="{Binding Origin}" />
                <DataGridTextColumn Header="Message" Binding="{Binding Message}" />
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</UserControl>